
{
    "parserOptions": {
        "ecmaVersion": 2024,
        "sourceType": "module"
    },
    "env": {
        "node": 1,
        "es6": true,
        "es2015": true, // Added support for ECMAScript 2015
        "es2017": true, // Added support for ECMAScript 2017
        "es2018": true, // Added support for ECMAScript 2018
        "es2019": true, // Added support for ECMAScript 2019
        "es2020": true, // Added support for ECMAScript 2020
        "es2021": true, // Added support for ECMAScript 2021
        "es2022": true, // Added support for ECMAScript 2022
        "es2023": true, // Added support for ECMAScript 2023
        "es2024": true // Added support for ECMAScript 2024
    },
    "extends": "eslint:recommended",
    "rules": {
        "quotes": [2, "single", { "avoidEscape": true }],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"]
    }
}

